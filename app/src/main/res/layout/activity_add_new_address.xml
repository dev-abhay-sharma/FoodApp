<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/_8sdp"
    tools:context=".activities.AddNewAddress">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/_10sdp">

            <ImageView
                android:id="@+id/addNewAddressBack"
                android:layout_width="@dimen/_25sdp"
                android:layout_height="@dimen/_25sdp"
                android:src="@drawable/back_arrow"
                app:tint="#000" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="Add New Address"
                android:textColor="#000"
                android:textSize="@dimen/_14ssp" />

        </RelativeLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true"
            android:scrollbarThumbVertical="@null">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#fafafa"
                android:padding="@dimen/_10sdp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_100sdp"
                    android:background="@drawable/rounded_border_background"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="import google map here "
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/_20sdp"
                        android:textColor="#000"
                        android:textSize="@dimen/_14ssp"/>

                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Add the location correctly"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/_4sdp"
                    android:textSize="@dimen/_10ssp"
                    android:textColor="#ABABAB"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:text="Label As"
                        android:textSize="@dimen/_12ssp"
                        android:textColor="#ABABAB"/>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_3sdp"
                        android:weightSum="3"
                        android:orientation="horizontal">

                        <androidx.cardview.widget.CardView
                            android:id="@+id/homeLabel"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            app:cardUseCompatPadding="true"
                            app:cardElevation="@dimen/_2sdp"
                            app:cardCornerRadius="@dimen/_3sdp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:padding="@dimen/_10sdp"
                                android:orientation="horizontal">

                                <ImageView
                                    android:id="@+id/homeLabelImg"
                                    android:layout_width="@dimen/_22sdp"
                                    android:layout_height="@dimen/_22sdp"
                                    android:src="@drawable/home_baseline"
                                    app:tint="@color/primary_color"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:text="Home"
                                    android:textSize="@dimen/_12ssp"
                                    android:textColor="#000"
                                    android:layout_marginStart="@dimen/_5sdp"/>

                            </LinearLayout>

                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:id="@+id/officeLabel"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            app:cardUseCompatPadding="true"
                            app:cardElevation="@dimen/_2sdp"
                            app:cardCornerRadius="@dimen/_3sdp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:padding="@dimen/_10sdp"
                                android:orientation="horizontal">

                                <ImageView
                                    android:id="@+id/officeLabelImg"
                                    android:layout_width="@dimen/_22sdp"
                                    android:layout_height="@dimen/_22sdp"
                                    android:src="@drawable/home_baseline"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:text="Office"
                                    android:textSize="@dimen/_12ssp"
                                    android:textColor="@color/grey"
                                    android:layout_marginStart="@dimen/_5sdp"/>

                            </LinearLayout>

                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:id="@+id/othersLabel"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            app:cardUseCompatPadding="true"
                            app:cardElevation="@dimen/_2sdp"
                            app:cardCornerRadius="@dimen/_3sdp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:padding="@dimen/_10sdp"
                                android:orientation="horizontal">

                                <ImageView
                                    android:id="@+id/othersLabelImg"
                                    android:layout_width="@dimen/_22sdp"
                                    android:layout_height="@dimen/_22sdp"
                                    android:src="@drawable/location_icon"
                                    app:tint="@color/grey"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:text="Others"
                                    android:textSize="@dimen/_12ssp"
                                    android:textColor="@color/grey"
                                    android:layout_marginStart="@dimen/_5sdp"/>

                            </LinearLayout>

                        </androidx.cardview.widget.CardView>

                    </LinearLayout>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Delivery Address"
                        android:layout_marginTop="@dimen/_20sdp"
                        android:textSize="@dimen/_12ssp"
                        android:textColor="#BAB9B9"/>

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_40sdp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:background="#fff"
                        android:hint="Address"
                        android:paddingStart="@dimen/_10sdp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Contact Person Name"
                        android:layout_marginTop="@dimen/_20sdp"
                        android:textSize="@dimen/_12ssp"
                        android:textColor="#BAB9B9"/>

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_40sdp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:background="#fff"
                        android:hint="Name"
                        android:paddingStart="@dimen/_10sdp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Street Number"
                        android:layout_marginTop="@dimen/_20sdp"
                        android:textSize="@dimen/_12ssp"
                        android:textColor="#BAB9B9"/>

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_40sdp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:background="#fff"
                        android:hint="Street Number"
                        android:paddingStart="@dimen/_10sdp"/>


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="House / Floor Number"
                        android:layout_marginTop="@dimen/_20sdp"
                        android:textSize="@dimen/_12ssp"
                        android:textColor="#BAB9B9"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/_50sdp"
                        android:orientation="horizontal"
                        android:weightSum="2">

                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_40sdp"
                            android:layout_weight="1"
                            android:layout_marginEnd="@dimen/_5sdp"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:background="#fff"
                            android:hint="House"
                            android:paddingStart="@dimen/_10sdp"/>

                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_40sdp"
                            android:layout_weight="1"
                            android:layout_marginStart="@dimen/_5sdp"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:background="#fff"
                            android:hint="Floor"
                            android:paddingStart="@dimen/_10sdp"/>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </ScrollView>

    </LinearLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginEnd="@dimen/_10sdp"
        android:layout_marginBottom="@dimen/_10sdp"
        android:text="Save Location"
        android:textAllCaps="false"
        android:textSize="@dimen/_14ssp"
        android:textColor="#fff"
        android:background="@drawable/rounded_background"
        android:layout_alignParentBottom="true"/>

</RelativeLayout>