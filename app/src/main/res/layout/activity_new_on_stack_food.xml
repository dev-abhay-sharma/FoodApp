<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context=".activities.NewOnStackFood">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/_10sdp">

        <ImageView
            android:id="@+id/newOnStackFoodBack"
            android:layout_width="@dimen/_28sdp"
            android:layout_height="@dimen/_28sdp"
            android:src="@drawable/back_arrow"
            app:tint="#000" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="New on Stack Food"
            android:textColor="#000"
            android:textSize="@dimen/_14ssp" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fafafa"
        android:layout_marginTop="@dimen/_5sdp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_5sdp"
            android:padding="@dimen/_1sdp"
            android:background="@drawable/rounded_border_background"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/newOnStackFoodAll"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="All"
                android:textColor="#fff"
                android:fontFamily="@font/araboto_medium_400"
                android:background="@color/primary_color"
                android:textSize="@dimen/_10ssp"
                android:padding="@dimen/_5sdp"/>

            <TextView
                android:id="@+id/newOnStackFoodVeg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Veg"
                android:textColor="#212121"
                android:layout_marginStart="@dimen/_4sdp"
                android:layout_marginEnd="@dimen/_4sdp"
                android:fontFamily="@font/araboto_medium_400"
                android:textSize="@dimen/_10ssp"
                android:padding="@dimen/_5sdp"/>

            <TextView
                android:id="@+id/newOnStackFoodNonVeg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Non-Veg"
                android:textColor="#212121"
                android:layout_marginStart="@dimen/_4sdp"
                android:fontFamily="@font/araboto_medium_400"
                android:textSize="@dimen/_10ssp"
                android:padding="@dimen/_5sdp"/>

        </LinearLayout>


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/newOnStackFoodActivityRecView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"/>

    </LinearLayout>

</LinearLayout>