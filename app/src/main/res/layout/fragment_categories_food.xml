<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context=".fragment.CategoriesFoodFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fafafa"
        android:layout_marginTop="@dimen/_5sdp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_5sdp"
            android:padding="@dimen/_1sdp"
            android:background="@drawable/rounded_border_background"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/cateFragmentAll"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="All"
                android:textColor="#fff"
                android:fontFamily="@font/araboto_medium_400"
                android:background="@color/primary_color"
                android:textSize="@dimen/_10ssp"
                android:padding="@dimen/_5sdp"/>

            <TextView
                android:id="@+id/cateFragmentVeg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Veg"
                android:textColor="#212121"
                android:layout_marginStart="@dimen/_4sdp"
                android:layout_marginEnd="@dimen/_4sdp"
                android:fontFamily="@font/araboto_medium_400"
                android:textSize="@dimen/_10ssp"
                android:padding="@dimen/_5sdp"/>

            <TextView
                android:id="@+id/cateFragmentNonVeg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Non-Veg"
                android:textColor="#212121"
                android:layout_marginStart="@dimen/_4sdp"
                android:fontFamily="@font/araboto_medium_400"
                android:textSize="@dimen/_10ssp"
                android:padding="@dimen/_5sdp"/>

        </LinearLayout>


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/cateFragmentRecView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"/>

    </LinearLayout>

</LinearLayout>